{
  "name": "CarManualConfig",
  "description": "Configuration for Ford car manual data set",
  "conversions": {
    "pdf": {
      "heading": {
        "fonts": [
          {
            "level": 1,
            "min_size": 24,
            "max_size": 80
          },
          {
            "level": 2,
            "min_size": 18,
            "max_size": 24,
            "bold": false,
            "italic": false
          },
          {
            "level": 2,
            "min_size": 18,
            "max_size": 24,
            "bold": true
          },
          {
            "level": 3,
            "min_size": 13,
            "max_size": 18,
            "bold": false,
            "italic": false
          },
          {
            "level": 3,
            "min_size": 13,
            "max_size": 18,
            "bold": true
          },
          {
            "level": 4,
            "min_size": 11,
            "max_size": 13,
            "bold": false,
            "italic": false
          }
        ]
      }
    },
    "word": {
      "heading": {
        "fonts": [
          {
            "level": 1,
            "min_size": 24,
            "bold": false,
            "italic": false
          },
          {
            "level": 2,
            "min_size": 18,
            "max_size": 23,
            "bold": true,
            "italic": false
          },
          {
            "level": 3,
            "min_size": 14,
            "max_size": 17,
            "bold": false,
            "italic": false
          },
          {
            "level": 4,
            "min_size": 13,
            "max_size": 13,
            "bold": true,
            "italic": false
          }
        ],
        "styles": [
          {
            "level": 1,
            "names": [
              "pullout heading",
              "pulloutheading",
              "header"
            ]
          },
          {
            "level": 2,
            "names": [
              "subtitle"
            ]
          }
        ]
      }
    },
    "html": {
      "exclude_tags_completely": [
        "script",
        "sup"
      ],
      "exclude_tags_keep_content": [
        "font",
        "em",
        "span"
      ],
      "exclude_content": {
        "xpaths": []
      },
      "keep_content": {
        "xpaths": []
      },
      "exclude_tag_attributes": [
        "EVENT_ACTIONS"
      ]
    },
    "json_normalizations": [
      {
        "operation": "copy",
        "source_field": "title",
        "destination_field": "searchTitle"
      },
      {
        "operation": "copy",
        "source_field": "body",
        "destination_field": "searchText"
      },
      {
        "operation": "remove_nulls"
      }
    ]
  },
  "enrichments": [
    {
      "enrichment": "alchemy_language",
      "source_field": "body",
      "options": {
        "extract": "entity,keyword,concept,taxonomy"
      },
      "destination_field": "body_enriched"
    }
  ],
  "normalizations": [
    {
      "operation": "copy",
      "source_field": "body_enriched.keywords.text",
      "destination_field": "enrichedText"
    },
    {
      "operation": "copy",
      "source_field": "body_enriched.concepts.text",
      "destination_field": "conceptText"
    },
    {
      "operation": "merge",
      "source_field": "conceptText",
      "destination_field": "enrichedText"
    },
    {
      "operation": "merge",
      "source_field": "searchTitle",
      "destination_field": "searchText"
    }
  ]
}